<view class="page home">
  <!--轮播banner-->
  <view class="banner">
    <swiper class="swiper" indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
      <block wx:for="{{imgUrls}}">
        <swiper-item>
          <image src="{{item}}" class="slide-image" />
        </swiper-item>
      </block>
    </swiper>
  </view>
  <view class="categroy">
    <navigator class="in" open-type="switchTab" url="/pages/tabBar/home/home">首页</navigator>
    <view bindtap="cate" data-name="953" class="{{options.catid==953 ? 'light' : 'in'}}">餐饮</view>
    <view bindtap="cate" data-name="954" class="{{options.catid==954 ? 'light' : 'in'}}">教育</view>
    <view bindtap="cate" data-name="703" class="{{options.catid==703 ? 'light' : 'in'}}">服装</view>
    <view bindtap="cate" data-name="955" class="{{options.catid==955 ? 'light' : 'in'}}">美容</view>
    <view bindtap="cate" data-name="956" class="{{options.catid==956 ? 'light' : 'in'}}">保健</view>
    <view bindtap="cate" data-name="957" class="{{options.catid==957 ? 'light' : 'in'}}">机械</view>
    <view bindtap="cate" data-name="958" class="{{options.catid==958 ? 'light' : 'in'}}">其他</view>
  </view>
  <!-- <view class="ad">
      <ad unit-id="adunit-3dec7df01b3be1d0"></ad> 
  </view> -->
  <!--商品goods-->
  <view style="display:{{style}}">
    <view class="goods">
      <scroll-view bindscroll="scroll" style="height: {{clientHeight}}px; width: {{windowWidth}}px;" scroll-y="true" bindscrolltoupper="pullDownRefresh" bindscrolltolower="pullUpLoad" lower-threshold="5" upper-threshold="5">
        <view class="goods-box" wx:for="{{goodslist}}" wx:key="" data-id="{{item.itemid}}">
          <navigator url="/pages/info/pages/good/good?itemid={{item.itemid}}&title={{item.title}}">
            <image class="gds-img {{arr[index]?'loaded':''}}" wx:if="{{item.thumb.length<90&item.thumb.length>45}}" src="{{arr[index]?item.thumb:''}}" />
            <image class="gds-img {{arr[index]?'loaded':''}}" wx:elif="{{item.thumb1.length<90&item.thumb1.length>45}}" src="{{arr[index]?item.thumb1:''}}" />
            <image class="gds-img {{arr[index]?'loaded':''}}" wx:else src="{{arr[index]?item.thumb2:''}}" />
            <text class="gds-title">{{item.title}}  </text>
            <view wx:if="{{item.groupid>6||item.honor_id==1}}" class="address">{{item.address}}</view>
            <view wx:else class="address" style="top:-120rpx">{{item.address}}</view>
            <view class="money" wx:if="{{item.fee>0}}">
              💰 投资金额：
              <text class="num">{{item.fee}}</text> 万元
            </view>
            <view class="money" wx:else>
              💰 投资金额：
              <text class="num">面议</text>
            </view>
          </navigator>
          <navigator url="/pages/pay/pages/pay/pay">
            <image wx:if="{{item.groupid>6}}" class="vip" src="/image/vip.png" />
          </navigator>
          <navigator wx:if="{{item.honor_id==1&&item.groupid>6}}" url="/pages/honor/pages/myhonor/myhonor?username={{item.username}}&company={{item.company}}&groupid={{item.groupid}}&honor_id={{item.honor_id}}" class="honor">已认证</navigator>
          <navigator wx:elif="{{item.honor_id==1&&item.groupid==6}}" url="/pages/honor/pages/myhonor/myhonor?username={{item.username}}&company={{item.company}}&groupid={{item.groupid}}&honor_id={{item.honor_id}}" class="honor" style="left:280rpx">已认证</navigator>
        </view>
        <!-- 加载完 -->
        <view class="more">
          <text style="display:{{moreText}}">所有数据加载完</text>
        </view>
      </scroll-view>
    </view>
  </view>
  <navigator style="display:{{reply}};text-align:center;padding-top:30%;color:#009933;font-size:50rpx" url="/pages/info/pages/categroy/categroy?catid={{options.catid}}" open-type="redirect">
    <view style="text-align:center;padding-top:8%;color:#00cc66;font-size:50rpx;">
      哎哟～网络不好，</view>
    <view class="reply">点击重新加载...</view>
  </navigator>
  <view class="body-view">
    <loading hidden="{{hidden}}" bindchange="loadingChange">
      加载中...
    </loading>
  </view>
</view>