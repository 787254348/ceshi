.banner {
  overflow: hidden;
  height: 150rpx;
  text-align: center;
  width: 100%;
}

.swiper{
  display: block;
  height: 150rpx;
}

.slide-image {
  width: 100%;
  height: 150rpx;
}

/*商品goods*/

.goods {
  overflow: hidden;
  border-top:8rpx solid #eee;
}

.goods-box {
  position: relative;
  overflow: hidden;
  float: left;
  width: 100%;
  border-bottom: 6rpx solid #eee;
  height:248rpx;
}

.gds-img {
  width: 200rpx;
  height: 150rpx;
  margin: 32rpx;
  opacity:0.5;
  transition:opacity 0.5s linear 1s;
}

.loaded{
  opacity:1;
}

.goods-box .gds-title {
  font-size: 28rpx;
  height: 54rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  width: 446rpx;
  padding-right: 3em;
  line-height: 28rpx;
  font-weight: 900;
  color: #099;
  position: absolute;
  top: 20rpx;
  left: 280rpx;
  padding-top: 2rpx;
}

/*更多more*/

.more {
  display:block;
  font-size:28rpx;
  text-align:center;
  float:left;
  width:100%;
  margin:30rpx 0;
}

.num {
  width: 40rpx;
  color: darkorange;
}

.money {
  font-size: 28rpx;
  margin-top: -76rpx;
  margin-left: 280rpx;
  border-top: 3rpx solid #ddd;
  margin-bottom: 20rpx;
  padding-top: 10rpx;
  margin-right: 16px;
}

.categroy {
  height: 120rpx;
  line-height: 53rpx;
  border-bottom: 4px solid #eee;
}

.light {
  color: #090;
  border-bottom: 2px solid #090;
  width: 25%;
  display:inline-block;
  text-align:center;
  font-size:28rpx;
}

.in {
  color: #777;
  width: 25%;
  display:inline-block;
  text-align:center;
  font-size:28rpx;
}

.address {
  position: relative;
  top: -102rpx;
  left: 280rpx;
  font-size: 24rpx;
  color: #999;
  height: 30rpx;
  overflow:hidden;
  width:63%;
  text-overflow:ellipsis;
