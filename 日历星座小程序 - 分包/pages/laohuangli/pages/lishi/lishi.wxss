.content {
  margin-top: 20rpx;
  border-bottom: 5rpx solid #ccc;
  padding-left: 1rem;
  padding-right: 3rem;
}

.txt {
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 4;
  color: #333;
}

.dy {
  display: block;
  float: right;
  margin-top: -64rpx;
  margin-right: -66rpx;
  font-size: 72rpx;
  color: #00bab8;
}

.time {
  font-size: 24rpx;
  margin-top: 12rpx;
  margin-bottom: 10rpx;
  color: #999;
}

.share {
  width: 50rpx;
  height: 60rpx;
  top: 600rpx;
  line-height: 60rpx;
  left: 46%;
  background-color: rgba(0, 0, 0, 0);
  padding-left: 0;
