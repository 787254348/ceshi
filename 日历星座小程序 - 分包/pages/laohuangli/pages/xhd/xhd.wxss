/* pages/xhd/xhd.wxss */
@import "../../../common/footer.wxss";
.content {
  margin-top: 76rpx;
  margin-left: 1.5rem;
  margin-right: 1.5rem;
  color: #555;
  font-size: 45rpx;
}

.tp{
  margin-left:1.5rem;
  margin-top:20rpx;
  color:#00bab8;
}

.time {
  font-size: 24rpx;
  padding-left: 1.5rem;
  margin-top: 18rpx;
  color: #666;
}

.title {
  margin-top: 50rpx;
  padding-left: 1.5rem;
  padding-right: 1.5rem;
  height: 100rpx;
  margin-bottom: 20rpx;
  border-bottom: 6rpx solid #eee;
}

.button {
  width: 21%;
  float: left;
  margin-right: 2%;
  margin-left: 2%;
}

.c {
  height: 100rpx;
  line-height: 100rpx;
  color: #999;
  text-align: center;
  font-size: 24rpx;
}

.share {
  width: 50rpx;
  height: 60rpx;
  top: 25%;
  line-height: 60rpx;
  left: 46%;
  background-color: rgba(0, 0, 0, 0);
  padding-left: 0;
  position: fixed;
  z-index: 4;
}

.sh {
  width: 50rpx;
  height: 50rpx;
}

button::after {
  border: 0;
}

.zs {
  margin-left: 4%;
  margin-top: 20rpx;
}

img {
  border-radius: 50%;
  width: 40rpx;
  height: 40rpx;
  float: left;
}

.ben {
  float: left;
  width: 50rpx;
  height: 50rpx;
  background-color: #093;
  border-radius: 50%;
  color: #fff;
  line-height: 50rpx;
  text-align: center;
  margin-right: 10rpx;
}

.fz {
  padding-left: 4%;
  margin-top: 30rpx;
  border-top: 4rpx solid #ccc;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #ccc;
}

.fuli {
  font-size: 48rpx;
  font-family: 'songti', Helvetica, STHeiTi, sans-seri;
  vertical-align: middle;
  color: #fff;
  font-weight: bold;
}

.view-bottom {
  position: relative;
  display: flex;
  align-items: center;
  background: #fff;
  border-top: 2rpx solid #ccc;
  border-bottom: 2rpx solid #ccc;
  margin-top: 20rpx;
}

.you {
  float: right;
  margin-right: 20rpx;
}

.bt{
  display:flex;
  width:100%;
  flex-wrap: wrap;
  margin-top:20rpx;
}

.bt button{
  background:#00bab8;
  color:#fff;
  width:47%;
  margin-left:2%;
  margin-right:0;
  padding:0;
  line-height:92rpx;
}
