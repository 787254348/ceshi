/* pages/jiemengDetail/jiemengDetail.wxss */
@import "../../../common/footer.wxss";
.total {
  margin-top: 40rpx;
  margin-left: 5%;
  width: 90%;
}

.back {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0px;
  background: rgba(0, 0, 0, 0.4);
  overflow: hidden;
  z-index:2;
}

.t {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  text-align: center;
  font-family: 微软雅黑;
  font-size: 40rpx;
}

.content {
  text-indent: 2em;
}

.c {
  height: 100rpx;
  line-height: 100rpx;
  color: #999;
  text-align: center;
  font-size: 24rpx;
}

.share {
  width: 50rpx;
  height: 60rpx;
  top: 40%;
  line-height: 60rpx;
  left: 46%;
  background-color: rgba(0, 0, 0, 0);
  padding-left: 0;
  position: fixed;
  z-index: 4;
}

.sh {
  width: 50rpx;
  height: 50rpx;
}

.bt{
  display:flex;
  width:calc(100% - 14px);
  flex-wrap: wrap;
  margin-left:14rpx;
}

.bt button{
  background:#00bab8;
  color:#fff;
  width:100%;
  margin-left:0;
  padding:0;
  line-height:92rpx;
  height:92rpx;
}

button::after {
  border: 0;
}


