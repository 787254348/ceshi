        <view class="b">
          <text class="left">新郎：</text>
          <input class="name" name="yname" value="" maxlength="10" placeholder="李雷" placeholder-style="color:#ccc"/>
          <text class="xname">新娘：</text>
          <input class="name" name="xname" value="" maxlength="10" placeholder="韩梅梅" placeholder-style="color:#ccc"/>
        </view>
        <view class="b">
