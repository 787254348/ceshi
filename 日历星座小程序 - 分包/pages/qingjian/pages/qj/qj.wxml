  <view wx:if="{{options.cate_id==1}}" class="content">
    <form bindsubmit="jiehun" report-submit>
      <view class="box1">
        <input type="hidden" name="imgUrl" value="{{ss}}" style="display:none;" maxlength="-1" />
        <input type="hidden" name="title" value="{{options.title}}" style="display:none;" />
        <input type="hidden" name="id" value="{{options.id}}" style="display:none;" />
        <input type="hidden" name="openid" value="{{openid}}" style="display:none;" />
        <input type="hidden" name="templet" value="{{options.templet}}" style="display:none;" />
