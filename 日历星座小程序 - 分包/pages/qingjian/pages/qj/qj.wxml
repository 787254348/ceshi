          <input class="name" style="width:376rpx" name="hotel" value="" placeholder="喜来登大酒店二层鸳鸯厅" placeholder-style="color:#ccc" maxlength="-1" />
        </view>
        <view class="b">
          <text class="left">地址：</text>
          <input class="name" style="width:456rpx" name="address" value="" placeholder="广州市天河区科韵路25号" placeholder-style="color:#ccc" maxlength="-1" />
        </view>
        <view class="b">
          <text class="left">日期：</text>
          <picker class="time" mode="date" name="date" value="{{date}}" start="2018-01-01" end="2023-12-12" bindchange="bindDateChange">
            <view class="picker">
              {{date}}
            </view>
          </picker>
        </view>
        <view class="b">
          <text class="left">时间：</text>
          <picker class="time" mode="time" name="time" value="{{time}}" start="00:00" end="23:59" bindchange="bindTimeChange">
            <view class="picker">
              {{time}}
            </view>
          </picker>
        </view>
        <view class="img-box">
          <block wx:for="{{a}}" wx:for-index="k">
            <image class="img" src="{{a[k]}}" />
            <icon type="cancel" size="30" color="red" class="cancel" />
            <view class="delete" plain="true" bindtap="delete1" data-name="{{k}}"></view>
          </block>
        </view>
        <button wx:if="{{a.length<3}}" class="btn" bindtap="chooseimage">+</button>
        <button class="btn-area" wx:if="{{status==1}}" formType="submit">确定</button>
        <button class="btn-area1" wx:else>制作中...</button>
      </view>
    </form>
    <view wx:if="{{vip==0}}">
      <ad class="ad" unit-id="adunit-3d63dffc6055a452"></ad>
    </view>
  </view>

