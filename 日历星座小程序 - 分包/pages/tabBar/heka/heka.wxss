  height:100%;
  width:100%;
  background:#ccc;
}
.daohang{
  height:70rpx;
  margin-top:20rpx;
  margin-bottom:14rpx;
  margin-left:2.5%;
}
.t1{
  width:22.5%;
  text-align:center;
  float:left;
