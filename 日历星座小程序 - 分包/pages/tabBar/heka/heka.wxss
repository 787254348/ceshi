.flex-container{
  display:flex;
  width:100%;
  flex-wrap: wrap;
  border-bottom:6rpx solid #fff;
}
.h{
  width:30%;
  margin-left:2.5%;
  margin-bottom:14rpx;
}
.img{
  height:180rpx;
  width:100%;
  vertical-align:middle;
}
.old-img{
  height:180rpx;
  width:100%;
  vertical-align:middle;
  background:#fff;
  opacity:0.5;   
  transition: opacity 0.5s linear 1s;
}
.loaded{
  opacity: 1;
}
.title{
  text-align:center;
  background:#fff;
  height:60rpx;
  line-height:60rpx;
  color:#00bab8;
  border-radius:0 0 10rpx 10rpx;
}
