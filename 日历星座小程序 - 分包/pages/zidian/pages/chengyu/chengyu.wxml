<import src="../../../templet.wxml" />
<template is="tanchuang" data="{{...item}}" />
<template is="msgItem" />
<ad class="ad" unit-id="adunit-fabf5d1c675642ef"></ad>
<form bindsubmit="chengyu" report-submit>
  <input type="hidden" name="openid" value="{{openid}}" style="display:none" />
  <input class="reselect" type="text" name="content" value="" placeholder="填写您要查的成语，如：春华秋实" placeholder-style="color:#999;font-size:28rpx" />
  <button class="btn-area" formType="submit">查成语</button>
</form>
<view class="keyword" wx:if="{{!restation}}">
  <view wx:for="{{keyword}}" wx:for-item="i" bindtap="select" data-name="{{i}}">{{i}}</view>
</view>
<view wx:if="{{restation}}" class="total">
  <view class="content" wx:if="{{restation.pinyin}}">拼音:
    <text class="t">{{restation.pinyin}}</text>
  </view>
  <view class="content" wx:if="{{restation.chengyujs}}">成语解释:
    <text class="t">{{restation.chengyujs}}</text>
  </view>
  <view class="content" wx:if="{{restation.tongyi}}">同义词:</view>
  <view wx:for="{{restation.tongyi}}" class="c" wx:for-item="i">{{i}}</view>
  <view class="content" wx:if="{{restation.fanyi}}">反义词:</view>
  <view wx:for="{{restation.fanyi}}" class="c" wx:for-item="j">{{j}}</view>
  <view class="content" wx:if="{{restation.from_}}">成语出处:
    <text class="t">{{restation.from_}}</text>
  </view>
  <view class="content" wx:if="{{restation.example}}">举例:
    <text class="t">{{restation.example}}</text>
  </view>
  <view class="content" wx:if="{{restation.yufa}}">语法:
    <text class="t">{{restation.yufa}}</text>
  </view>
  <view class="content" wx:if="{{restation.ciyujs}}">词语解释:
    <text class="t">{{restation.ciyujs}}</text>
  </view>
  <view class="content" wx:if="{{restation.yinzhengjs}}">引证解释:
    <text class="t">{{restation.yinzhengjs}}</text>
  </view>
</view>
<button class="onshare" open-type="share" size="{{primarySize}}" loading="{{loading}}" plain="{{plain}}" disabled="{{disabled}}" bindtap="onshare">😁点我分享</button>
<template is="miniProgram" />
<ad class="ad" unit-id="adunit-fabf5d1c675642ef"></ad>
<template is="footer" />
