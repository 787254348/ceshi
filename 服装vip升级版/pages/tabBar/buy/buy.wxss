.banner {
  height:170rpx;
  width:100%;
}

/*商品goods*/

.goods {
  overflow: hidden;
  border-top:8rpx solid #eee;
}

.goods-box {
  position: relative;
  overflow: hidden;
  float: left;
  width: 375rpx;
  border-bottom: 4px solid #eee;
  height: 190rpx;
  padding-top: 35rpx;
}

.goods-box::after {
  position: absolute;
  top: 0;
  right: 0;
  width: 1px;
  height: 100%;
  border-right: 4px solid #eee;
  content: " ";
} 

.goods-box:nth-child(2n)::after{
  border-right:none;
}

.goods-box .gds-title {
  font-size: 28rpx;
  height: 80rpx;
  padding: 0 20rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

/*更多more*/

