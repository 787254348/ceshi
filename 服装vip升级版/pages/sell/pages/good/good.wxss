.content {
  width: 100%;
  overflow-x: hidden;
  overflow-y: hidden;
}

.cp {
  width: 100%;
  display: block;
  text-align: center;
  padding-top: 0.3rem;
}

.slide-image {
  height: 500rpx;
}

.con {
  width: 100%;
  height: auto;
  display: block;
  border-bottom: 0.5rem solid #ededed;
}

.describe {
  width: 93%;
  height: auto;
  display: block;
  line-height: 1.8rem;
  padding-left: 0.8rem;
  padding-right: 0.4rem;
  color: #666;
  font-size: 28rpx;
}

.title {
  line-height: 2rem;
  display: block;
  padding-left: 0.7rem;
  color: #333;
  border-bottom: 0.5rem solid #ededed;
  padding-right: 1em;
}

.product {
  display: block;
  padding-left: 0.7rem;
  color: #333;
  line-height: 2rem;
  border-bottom: 1rpx solid #ccc;
}

.price {
  font-size: 26rpx;
  color: #666;
  padding-left: 0.7rem;
  border-top: 0.5rem solid #ededed;
  border-bottom: 0.5rem solid #ededed;
}

.pifa {
  display: inline-block;
  color: #333;
  line-height: 2rem;
}

.company {
  border-top: 0;
}

.company text {
  color: #090;
  border-bottom: 1rpx solid #090;
}

.num {
  display: inline-block;
  color: #666;
}

.information {
  display: block;
  width: 100%;
  height: auto;
  color: #333;
  font-size: 26rpx;
  padding-left: 0.7rem;
}

.information view {
  display: block;
  width: 93%;
  line-height: 2rem;
  border-top: 1rpx solid #eaeaea;
  color: #666;
}

.home {
  position: fixed;
  top: 40rpx;
  right: 50rpx;
  z-index: 4;
  width: 70rpx;
  height: 70rpx;
  display: block;
}

.fb {
  width: 79rpx;
  height: 41rpx;
  margin-top: 30rpx;
  padding-bottom: 35rpx;
}

.vip {
  height: 32rpx;
  width: 98rpx;
}

.honor {
  font-size: 26rpx;
  line-height: 2rem;
  padding-left: 0.7rem;
  color: #093;
}

.success {
  position: relative;
  top: 5rpx;
}

.c {
  height: 70rpx;
  line-height: 70rpx;
  color: #999;
  text-align: center;
  font-size: 24rpx;
}

.share {
  width: 50rpx;
  height: 60rpx;
  top: 616rpx;
  line-height: 60rpx;
  left: 46%;
  background-color: rgba(0, 0, 0, 0);
  padding-left: 0;
  position: fixed;
  z-index: 4;
}

.sh {
  width: 50rpx;
  height: 50rpx;
}

button::after {
  border: 0;
}

.right {
  float: right;
  font-size: 36rpx;
  color: #999;
}

.shouquan {
  text-align: center;
  background: #eee;
  height: 32px;
  line-height: 32px;
  border: 1rpx solid #093;
  color: #093;
  border-radius: 10rpx;
  margin-right: 5%;
  margin-bottom: 20rpx;
  margin-top: 10rpx;
}

.ss {
  padding-right: -0.6rem;
  font-size: 28rpx;
  color: #666;
  line-height: 40rpx;
  width: 93%;
}

.benyi {
  color: #093;
  display: inline-block;
  background: #fff;
  height: 32rpx;
  line-height: 40rpx;
  font-size: 28rpx;
  padding: 0;
}

.btn {
  background-color: #6c6;
  margin-left: 0;
  width: 30%;
  float: left;
  margin-right: 20rpx;
  height: 92rpx;
  line-height: 92rpx;
}

.bt {
  background-color: #6c6;
  margin-left: 0;
  width: 64%;
  font-size: 32rpx;
  height: 92rpx;
  line-height: 92rpx;
}

.view-name text {
  color: #999;
  font-size: 24rpx;
}

.mingpian {
  line-height: 2rem;
  border-top: 1rpx solid #eaeaea;
  width: 93%;
  color: #093;
}

.mingpian text {
  border-bottom: 1rpx solid #090;
}
